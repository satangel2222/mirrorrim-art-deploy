{
  "name": "mirrorrim-art-deploy",
  "version": "1.0.0",
  "description": "Complete AI Image Generation Platform with Z-Image Turbo",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:db": "docker-compose up -d postgres",
    "dev:all": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:docker": "docker-compose build",
    "start:docker": "docker-compose up",
    "db:migrate": "docker-compose exec postgres psql -U postgres -d mirrorrim -f /scripts/init-db.sql"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "ai",
    "image-generation",
    "z-image-turbo",
    "lora",
    "credits"
  ],
  "author": "MirrorriM.art",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ]
}
